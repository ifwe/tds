#!/usr/bin/env python

import re
import sys
import yaml

def main(*args):
    rpm_format, filename = args[-2:]
    data = yaml.load(open(filename))

    def sub(x):
        to_return = str(data.get(x.group(1), ''))
        if not to_return:
            raise Exception()
        return to_return

    print re.sub(r'%\{(.*?)}', sub, rpm_format)
    return 0


if __name__ == '__main__':
    sys.exit(main(*sys.argv[1:]))
