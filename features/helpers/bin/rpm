#!/usr/bin/env python

import sys
import os
import yaml

def main():
    rpm_format = sys.argv[-2]
    filename = sys.argv[-1]
    file_yaml = yaml.load(open(filename))
    arch = file_yaml['arch']
    name = file_yaml['name']
    version = file_yaml['version']
    release = file_yaml['revision']
    print arch
    print name
    print version
    print release
    return 0


if __name__ == '__main__':
    sys.exit(main())
